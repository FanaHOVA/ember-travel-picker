<div class='fluid-container'>
  <div class='row'>
    <div class='col-md-7'>
      {{#each model as |route|}}
          {{route-display agency=route.agency
                          classes=route.classes
                          number=route.number
                          from=route.from
                          to=route.to
                          departureTime=route.departureTime
                          arrivalTime=route.arrivalTime
                          duration=route.duration
                          pickedTrip="setFinalTrip"
                          previous=activeTrip
                          }}
      {{/each}}
    </div>
    <div class='col-md-4 {{unless checkoutActive 'hidden'}}'>
      <div class="panel panel-default">
        <div class="heading panel-heading">
          <h3 class="panel-title">Carrello</h3>
        </div>
        <div class="panel-body">
          <div class='row'>
            <div class='col-sm-6'>
              <img class='agency-logo' src={{logo}}>
            </div>
            <div class='col-sm-6' style='text-align: right'>
              {{camel-price price=price}}
            </div>
          </div>
          <div class='row checkout-trip-info trip-info-wrap' style='padding: 0px;'>
            {{trip-graph departureTime=departureTime
                         arrivalTime=arrivalTime
                         from=from
                         to=to
                         formattedDuration=duration
                         agency=agency
                         number=number}}
          </div>
        </div>
      </div>
      <div class='row'>
          <div class='col-sm-4'>

          </div>
          <div class='checkout-col col-sm-2'>
            {{camel-price price=price}}
          </div>
          <div class='checkout-col col-sm-2'>
            <button class='btn btn-checkout'>Checkout</button>
          </div>
      </div>
    </div>
  </div>
  <div id='clear' style='display: none'>
  </div>
</div>
